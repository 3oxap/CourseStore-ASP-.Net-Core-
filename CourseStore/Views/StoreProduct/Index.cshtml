@model StoreProductViewModel
  
    <h2 class="text-center">Basket</h2>
<div class="container">
    @foreach(var el in Model.storeProduct.listStoreItems)
    {
        <div class="alert alert-warning mt-5">
           <p><b>Product: @el.product.name</b></p>
            <p><b>Price: @el.product.price.ToString("c")</b></p>
        </div>
    }
    <hr />
    <a class="btn btn-danger mb-5" asp-controller="Order" asp-action="Checkout">Pay</a> 
</div>